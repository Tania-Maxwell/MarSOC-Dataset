	langid = {english},
	note = {Publisher: {IOP} Publishing},
	file = {IOP Full Text PDF:C\:\\Users\\Tania\\Zotero\\storage\\SCHQNDW8\\Cusack et al. - 2018 - Organic carbon sequestration and storage in vegeta.pdf:application/pdf},
}

