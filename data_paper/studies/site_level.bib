	langid = {english},
	keywords = {Organic carbon, Carbon dioxide, Ecosystem service, Glomalin, Salt-marsh soil, Structure},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Tania\\Zotero\\storage\\3R94IAWZ\\Gispert et al. - 2020 - The role of soil as a carbon sink in coastal salt-.pdf:application/pdf},
}

@article{hayes_dynamics_2017,
