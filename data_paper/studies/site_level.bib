	journaltitle = {Science of The Total Environment},
	shortjournal = {Science of The Total Environment},
	author = {Perera, Nipuni and Lokupitiya, Erandathie and Halwatura, Devanmini and Udagedara, Susantha},
	urldate = {2022-09-14},
	date = {2022-05-10},
	langid = {english},
	keywords = {Blue carbon, Soil organic carbon, Vegetated coastal wetlands},
